<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="org.succlz123.AxBTube"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- network access -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- gsm网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- wifi网路信息  -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- write sdcard -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--获取设备信息-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MDTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/TranslucentStatusTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.acfun.AcPartitionActivity">
        </activity>

        <activity
            android:name=".ui.activity.acfun.AcContentActivity"
            android:theme="@style/TranslucentStatusTheme">
        </activity>


        <!-- Don't forgot InitActivity -->
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity
            android:name=".ui.activity.VideoPlayActivity"
            android:configChanges="orientation|keyboardHidden"
            android:process=":vitamio"
            android:screenOrientation="landscape">
        </activity>

    </application>

</manifest>
