<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="dyeTheme" parent="AppTheme"/>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Toolbar颜色 也是多任务切换的标题颜色-->
        <item name="colorPrimary">@color/pink_base</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/pink_base_dark</item>
        <!--下划线 提示等一些组件的 着色-->
        <item name="colorAccent">@color/pink_base_dark</item>

        <!--<item name="colorPrimary">#673AB7</item>-->
        <!--<item name="colorPrimaryDark">#512DA8</item>-->

        <!--android底色-->
        <item name="android:windowBackground">@color/window_background</item>
        <!--ActionMode出现时 覆盖ActionBar-->
        <item name="windowActionModeOverlay">true</item>
    </style>

