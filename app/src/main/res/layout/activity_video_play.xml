<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/video_play_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.succlz123.blueboard.controller.activity.video.xxx
        android:id="@+id/ok_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <master.flame.danmaku.ui.widget.DanmakuSurfaceView
        android:id="@+id/sv_danmaku"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/video_title_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="top"
        android:background="@color/video_background"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/video_back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Belive"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/video_hd"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_high_quality_white_48dp"/>

        <ImageView
            android:id="@+id/video_danmaku"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_repeat_white_48dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_controller_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:background="@color/video_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_play_arrow_white_48dp"/>

        <ProgressBar
            android:id="@+id/probar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="00:00 / 00:00"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_brightness"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/video_background"
            android:gravity="bottom|center_horizontal"
            android:text="亮度"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_brightness"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/video_background"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="66%"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_volume"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/video_background"
            android:gravity="bottom|center_horizontal"
            android:text="音量"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/video_background"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="66%"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/video_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/download_rate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="133kb / 79%"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_pro_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>